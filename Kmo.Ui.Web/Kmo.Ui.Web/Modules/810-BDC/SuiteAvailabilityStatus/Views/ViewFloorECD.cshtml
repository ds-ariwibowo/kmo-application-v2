                        total = n.column(4).data().reduce(function (e, t) { return s(e) + s(t) }, 0), pageTotal = n.column(4, { page: "current" }).data().reduce(function (e, t) { return s(e) + s(t) }, 0) //, $(n.column(4).footer()).html(pageTotal + " &nbsp;<b>(" + total + " Total kVA)</b>")
