                    }
                }
        }();

        jQuery(document).ready(function ()
        {
            TableDatatablesManaged.init()
            App.startPageLoading({ animate: true });
            $('#suiteTbl').show();
            App.stopPageLoading();
        });   

        $('.manageFloorECD').click(function () {
            App.startPageLoading({ animate: true });
            $.ajax({
                url: "/SuiteAvailabilityStatus/ManageFloorEcdPartialView",
                type: 'Get',
                success: function (msg) {
                    $("#fullctx").empty().append(msg);
                    $("#full").modal('toggle');
                },
                complete: function () {
                    App.stopPageLoading();
                    $('#titleModal').text("Submit UTL:ECD on Floor level " + $('#floorId').text());
                },
                error: function () {
                    alert("something on Floor ECD seems wrong");
                }
            });
        });
       

      
     

    </script>


}
