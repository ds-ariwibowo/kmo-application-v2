<script type="text/javascript">

    function parseToFloat(selectedId) {
        var id = '#' + $(selectedId).attr('id');
        if (id == '#undefined') {
            if (selectedId.substr(0, 1) !== '#')
                id = '#' + selectedId;
            else
                id = selectedId;
        }      
        $(id).val(parseFloat(Number($(id).val().toString().replace(/[^0-9\.]+/g, ""))));
    }
    
    var FormInputMask = function () {
        var handleInputMasks = function () {
            $('#c2').inputmask('Regex', { regex: "^[0-9]{1,9}?$" });
            $('#c3,#c4').inputmask('Regex', { regex: "^[0-9]{1,9}(\\.\\d{1,2})?$" });
        }
        return {
            //main function to initiate the module
            init: function () {
                handleInputMasks();
            }
        };
    }();

    function setZoneValue(zone) {
        if (zone == 'West')
            $("#c41").prop('checked', true);
        if (zone == 'Center')
            $("#c42").prop('checked', true);
        if (zone == 'East')
            $("#c43").prop('checked', true);
        $('#zone').text(zone);
    }

    $('.cbZ').click(function () {
        var zone;
        id = $(this).attr('id');
        if ($(this).is(":checked")) {
            if (id == 'c41')
                zone = "West";
            if (id == 'c42')
                zone = "Center";
            if (id == 'c43')
                zone = "East";
            $('#zone').text(zone);
        }
        else
            $('#zone').text("");

    });

    // make one checked only on group cbZ
    $(".cbZ").change(function () {
        var checked = $(this).is(':checked');
        $(".cbZ").prop('checked', false);
        if (checked) {
            $(this).prop('checked', true);
        }
    });


    var id = 0;
    $(document).ready(function () {
        App.startPageLoading({ animate: true });
        FormInputMask.init();

        $('#sas').show();
        $('#sasdate').val($('#currentDate').text());
        $('#c1').val($('#floorId').text());

        var selectedId = $('#suiteId').text();
        var selectedName = $('#suiteName').text();

        $.ajax({
            url: "/SuiteAvailabilityStatus/GetSuite",
            data: { floorId: $('#floorId').text(), suiteId: selectedId },
            type: 'Get',
            contentType: 'application/json',
            cache: false,
            success: function (e) {
                if (e.success) {
                    $.each(e.data, function (i, item) {
                        if (i == 'SuitId') {
                            $('#newId').text(item);
                            $('#rev').text(1); // parseInt(item) + 1
                        }
                        if (i == 'SuiteName') {
                            $('#c2').val(item);
                        }
                        if (i == 'SuiteArea')
                            $('#c3').val(item);
                        if (i == 'ElectricityCapacity') {
                            $('#c4').val(item);
                        }
                        if (i == 'Zone')
                            setZoneValue(item);
                    });
                }
                else {
                    alert(e.message);
                }
            },
            complete: function () {},
            error: function (msg) {
                alert("something on Suite seems wrong");
            }
        });

        App.stopPageLoading();
    });



    $("#submit").click(function () {

        if ($('#c2').val().trim() == '' || $('#c3').val().trim() == '' || $('#c4').val().trim() == '') {
            if ($('#c4').val().trim() == '')
                $("#c4").focus();
            if ($('#c3').val().trim() == '')
                $("#c3").focus();
            if ($('#c2').val().trim() == '')
                $("#c2").focus();
            return;
        }     

        if ($('#zone').text() == '') {
            bootbox.alert("Please select suite zone !");
            return;
        }

        var floorId = $('#floorId').text();
        var suiteId = $('#newId').text();
        var oldSuiteId = $('#suiteId').text();

        var suite = $('#c2').val();
        $('#checkSuiteName').text("");
     
        $.ajax({
            url: "/SuiteAvailabilityStatus/CheckSuiteByName",
            type: 'Get',
            data: { suiteName: suite, suiteId: oldSuiteId },
            cache: false,
            success: function (data) {
                $.each(data, function (col, value) {
                        if (col == 'SuiteName')
                            $('#checkSuiteName').text(value);
                });
            },
            complete: function () {

                if ($('#checkSuiteName').text() !== '') {
                    bootbox.alert("Suite number " + $('#checkSuiteName').text() + " already exists !");
                    return;
                }              

                App.startPageLoading({ animate: true });
                var area = $('#c3').val();
                var capacityKva = $('#c4').val();

                var model = {
                    oldSuiteId: oldSuiteId,
                    FloorId: floorId,
                    HoldingCompanyId: $('#holdingCompanyId').val(),
                    SuitId: suiteId,
                    SuiteOrder: 0,
                    SuiteName: suite,
                    Area: parseFloat(area),
                    CapacityKva: parseFloat(capacityKva),
                    Zone: $('#zone').text(),
                    IsUsed: 1
                };

                $.ajax({
                    type: "POST",
                    data: JSON.stringify(model),
                    url: "/SuiteAvailabilityStatus/AddNewSuite",
                    contentType: "application/json"
                }).done(function (res) {
                    App.stopPageLoading();

                    window.location.reload(true);
                });

            },
            error: function (msg) {
                alert("something on Check Suite seems wrong");
            }
        });
        
    });


</script>